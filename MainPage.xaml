<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DownTube.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25">
            <Label
                Text="Enter a youtube video URL:"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.Description="Enter a youtube video URL"
                HorizontalOptions="Start"/>
            <Entry
                x:Name="videoUrlEntry"
                Placeholder="Valid youtube URL . . ."/>
            <Button
                x:Name="loadButton" 
                Text="Load Video" 
                SemanticProperties.Hint="Loads the specified youtube video URL you have entered"
                Clicked="OnLoadClicked"
                HorizontalOptions="Start"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
